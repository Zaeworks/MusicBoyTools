<Window x:Class="XiamiTags.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XiamiTags"
        mc:Ignorable="d"
        Title="虾米标签助手" Height="300" Width="400" SizeToContent="Height" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnImport" Content="从剪切板导入" Click="btnImport_Click" Padding="5"/>
            <Button x:Name="btnExport"  Content="导出标签文件" Click="btnExport_Click" Padding="5" Margin="10,0" IsEnabled="False"/>
            <Button x:Name="btnCopy" Content="复制格式" Click="btnCopy_Click" Padding="5" IsEnabled="False"/>
        </StackPanel>
        <TextBox x:Name="textBox" AcceptsReturn="True" MinHeight="100" MaxHeight="300" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
    </StackPanel>
</Window>
